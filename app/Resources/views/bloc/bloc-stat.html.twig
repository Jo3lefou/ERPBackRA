{# app/Ressources/views/bloc/bloc-stat.html.twig #}
<div class="row tile_count">
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i> Total Orders</span>
      <div class="count">{{ stat.nbOrderTotal.1|number_format(0, ',', ' ') }}</div>
      <span class="count_bottom">for the current year</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-clock-o"></i> Total Orders waiting</span>
      <div class="count">{{ stat.nbOrderPending.1|number_format(0, ',', ' ') }}</div>
      <span class="count_bottom">order(s) to approve.</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i> Order to deliver this month</span>
      <div class="count green">{{ stat.nbOrderToDeliverThisMonth.1|number_format(0, ',', ' ') }}</div>
      <span class="count_bottom">for shops and eshop</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i> Total Customer</span>
      <div class="count">{{ stat.nbCustomerTotal.1|number_format(0, ',', ' ') }}</div>
      <span class="count_bottom">Whatever the source</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i> Money cash this year</span>
      <div class="count">{{ stat.sumRevenue.0.amount|number_format(0, ',', ' ') }}&nbsp;€</div>
      <span class="count_bottom">All approuved orders</span>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
      <span class="count_top"><i class="fa fa-user"></i> Best Shop this year</span>
      <div class="count">{{ stat.sumBestShops.0.Total|number_format(0, ',', ' ') }}&nbsp;€</div>
      <span class="count_bottom">{% trans %}Generated by{% endtrans %} {{ stat.sumBestShops.0.name }}</span>
    </div>
</div>