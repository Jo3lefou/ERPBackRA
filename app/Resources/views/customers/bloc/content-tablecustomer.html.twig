

<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="page-title">
    <div class="title_left">
      <h3>{{ p1h2 }}</h3>
    </div>

    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <div class="input-group pull-right" style="margin:0px">
          <form class="form-inline" method='post' action='/{{locale}}/customers/search/{{nbitem}}/'>
            <div class="form-group" style="margin:0px">
              <label class="sr-only" for="term">Search</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-search"></i></div>
                <input type="text" class="form-control" placeholder="{{searchterm}}" name="term" id="term" style="border: 1px solid #ccc;">
                <div class="input-group-addon" style="padding: 0px;"><input type="submit" class="btn btn-default" type="button" value="Go!" style="margin: 0px;background: transparent;border: none;"/></div>
              </div>
            </div>
            
          </form>
        </div>
      </div>
    </div>
  </div>



  <div class="x_panel">
    <div class="x_title">
      <h2>{{ p1h2 }}</h2>
      <div class="col-md-2 pull-right"><a href="/admin/{{ locale }}/models/create/" class="btn btn-success btn-xs"><i class="fa fa-plus"></i> {% trans %}Add a new customer{% endtrans %}</a></div>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <p class="text-muted font-13 m-b-30">
        Find all your customers here and manage their profile from here.
      </p>
      {{ dump(pagination) }}
      <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>{% trans %}Last name{% endtrans %}</th>
            <th>{% trans %}First name{% endtrans %}</th>
            <th>{% trans %}City{% endtrans %}</th>
            <th>{% trans %}Phone{% endtrans %}</th>
            <th>{% trans %}Email{% endtrans %}?</th>
            <th>{% trans %}Nb Orders{% endtrans %}</th>
            <th>{% trans %}Action{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
          {% for customer in customers %}
          <tr>
            <td>{{ customer.lastName }}</td>
            <td>{{ customer.firstName }}</td>
            <td>{{ customer.city }}</td>
            <td>{{ customer.phone }}</td>
            <td>{{ customer.email }}</td>
            <td>{{ customer.orders|length }}</td>
            <td><a href="edit/" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>&nbsp;<a href="edit/" class="btn btn-danger btn-xs"><i class="fa  fa-trash"></i></a>&nbsp;<a href="edit/" class="btn btn-warning btn-xs"><i class="fa fa-lock"></i></a></td>
          </tr>
          {% endfor %}
        </tbody>
      </table>

      {# total items count #}
      <div class="count">
          {{ pagination.getTotalItemCount }}
      </div>
      <table id="datatable-buttons" class="table table-striped table-bordered">
        <thead>
          <tr>
          {# sorting of properties based on query components #}
              <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
              <th{% if pagination.isSorted('a.firstName') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'FirstName', 'a.firstName') }}</th>
          </tr>
        </thead>
        <tbody>
          {# table body #}
          {% for customer in pagination %}
          <tr {% if loop.index is odd %}class="color"{% endif %}>
              <td>{{ customer.id }}</td>
              <td>{{ customer.firstName }}</td>
              <td>{{ customer.dateCreation | date('Y-m-d') }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      {# display navigation #}
      <div class="navigation">
          {{ knp_pagination_render(pagination) }}
      </div>

    </div>



  </div>
</div>