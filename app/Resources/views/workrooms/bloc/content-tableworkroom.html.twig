

<div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>{{ p1h2 }}</h2>
                    <div class="col-md-2 pull-right"><a href="/admin/{{ locale }}/workrooms/create/" class="btn btn-success btn-xs"><i class="fa fa-plus"></i> {% trans %}Create a new workroom{% endtrans %}</a></div>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                      blabla
                    </p>
                    <table id="datatable-buttons" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>{% trans %}Name{% endtrans %}</th>
                          <th>{% trans %}Address<{% endtrans %}/th>
                          <th>{% trans %}Email{% endtrans %}</th>
                          <th>{% trans %}Phone{% endtrans %}</th>
                          <th>{% trans %}Active{% endtrans %}</th>
                          <th>{% trans %}Action{% endtrans %}</th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for workroom in workrooms %}
                        <tr>
                          <td>{{ workroom.name }}</td>
                          <td>{{ workroom.address }} {{ workroom.postCode }} {{ workroom.city }}, {{ workroom.state }}, {{ workroom.country }}</td>
                          <td>{{ workroom.email }}</td>
                          <td>{{ workroom.phone }}</td>
                          <td>
                            {% if workroom.isActive == '1' %}
                            <span class="label label-success">{% trans %}Active{% endtrans %}</span>
                            {% else %}
                            <span class="label label-danger">{% trans %}Not active{% endtrans %}</span>
                            {% endif %}
                          </td>
                          <td><a href="edit/{{ workroom.id }}" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> {% trans %}Edit{% endtrans %}</a> <a href="edit/{{ workroom.id }}" class="btn btn-danger btn-xs"><i class="fa  fa-trash"></i> {% trans %}Delete{% endtrans %}</a> <a href="edit/{{ workroom.id }}" class="btn btn-warning btn-xs"><i class="fa fa-lock"></i> {% trans %}Desactivate{% endtrans %}</a></td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>