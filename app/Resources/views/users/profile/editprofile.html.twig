{% extends 'base.html.twig' %}

{% block title %}Rime Arodaky {{ title }}{% endblock %}

{% block body %}
  <div class="container body">
      <div class="main_container">
        <div class="col-md-3 left_col menu_fixed">
          <div class="left_col scroll-view">
            <div class="navbar nav_title" style="border: 0;">
              <a href="/" class="site_title"><span><img src="{{ url('homepage') }}build/images/logo.png" height="39px" style="margin-left: 36px"></span></a>
            </div>

            <div class="clearfix"></div>

            {{ include('bloc/bloc-leftnav-profil.html.twig') }}

            <br />

            {{ include('bloc/bloc-leftnav-menu.html.twig') }}
            {{ include('bloc/bloc-leftnav-shortcut.html.twig') }}
            
          </div>
        </div>



        {{ include('bloc/bloc-topnav.html.twig') }}
        

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="title_left">
            <h3>{{ h1 }}</h3>
          </div>
          {% for message in app.flashes('success') %}
              <div class="alert alert-success">
                  {{ message }}
              </div>
          {% endfor %}

          
          <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
              {% form_theme form 'jquery.collection.html.twig' %}
              {{ form_start(form) }}

              
              <div class="x_panel">
                <div class="x_title">
                  <h2>
                    {{ p1h2 }}
                    <small>{{ p1h3 }}</small>
                  </h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <!-- CONTENU -->
                  <div class="form-horizontal form-label-left">
                  
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username">{% trans %}Username{% endtrans %}
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    {% if (form.password) is defined %}
                    <div class="form-group">
                      <label for="password" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}Password{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.password, {'attr': {'class': 'form-control col-md-7 col-xs-12'}} ) }}
                      </div>
                    </div>
                    {% endif %}
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">{% trans %}First Name{% endtrans %} <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">{% trans %}Last Name{% endtrans %} <span class="required">*</span>
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}Email{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}Mobile{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.mobile, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}City{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.city, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}State{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.state, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="email" class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}Country{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.country, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12">{% trans %}Language{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        <div id="locale" class="btn-group" data-toggle="buttons">
                          <label class="btn btn-default {% if user.locale == 'en' %}active{% endif %}" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            <input type="radio" name="locale" value="en" {% if user.locale == 'en' %}checked{% endif %}> &nbsp; {% trans %}English{% endtrans %} &nbsp;
                          </label>
                          <label class="btn btn-default {% if user.locale == 'fr' %}active{% endif %}" data-toggle-class="btn-primary" data-toggle-passive-class="btn-default">
                            <input type="radio" name="locale" value="fr" {% if user.locale == 'fr' %}checked{% endif %}> {% trans %}French{% endtrans %}
                          </label>
                          {{ form_widget(form.locale, {'value': user.locale} ) }}
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="color">{% trans %}Color{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.userColor, {'attr': {'class': 'form-control col-md-7 col-xs-12 colorPicker'}}) }}
                      </div>
                    </div>
                    {% if form.imageFile is defined %}
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="color">{% trans %}Votre avatar{% endtrans %}</label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.imageFile, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="form-group">
                      <label class="control-label col-md-3 col-sm-3 col-xs-12" for="token">{% trans %}Token{% endtrans %}
                      </label>
                      <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.token, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                      </div>
                    </div>
                    {% endif %}
                  </div>
                  <!-- // CONTENU -->
                </div>
              </div>
              {% if is_granted('ROLE_ADMIN') %}
              {% if (form.role) is defined %}
              <div class="x_panel">
                <div class="x_title">
                  <h2>
                    {{ p2h2 }}
                    <small>{{ p2h3 }}</small>
                  </h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <div class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="role">{% trans %}Rights and Access{% endtrans %}</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                          {{ form_widget(form.role, {'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="role">{% trans %}Rights on customer{% endtrans %}</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                            <div class="checkbox">
                              <label>{{ form_widget(form.customerAllow, {'attr': {'class': 'js-switch'}}) }} {% trans %}Do you wish this user to be allowed to create some new customer{% endtrans %} ?</label>
                            </div>
                        </div>
                      </div>
                    </div>
                </div>
              </div>
              {% endif %}
              {% endif %}
              {% if is_granted('ROLE_ADMIN') %}
              {% if (form.shops) is defined %}
              <div class="x_panel">
                <div class="x_title">
                  <h2>
                    {{ p3h2 }}
                    <small>{{ p3h3 }}</small>
                  </h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <div class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="role">{% trans %}Select shop(s) linked to that user{% endtrans %}</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                          
                          {% for shop in form.shops %}
                            <div class="checkbox">
                              <label>{{ form_widget(shop, {'attr': {'class': 'js-switch'}}) }} {{ shop.vars.label }}</label>
                            </div>
                          {% endfor %}
                        </div>
                      </div>
                    </div>
                    <hr/>
                </div>
              </div>
              {% endif %}
              {% endif %}
              {% if is_granted('ROLE_ADMIN') %}
              {% if (form.workrooms) is defined %}
              <div class="x_panel">
                <div class="x_title">
                  <h2>
                    {{ p4h2 }}
                    <small>{{ p4h3 }}</small>
                  </h2>
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <div class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="role">{% trans %}Select workroom(s) linked to that user{% endtrans %}</label>
                        <div class="col-md-8 col-sm-8 col-xs-12">
                          
                          {% for workroom in form.workrooms %}
                            <div class="checkbox">
                              <label>{{ form_widget(workroom, {'attr': {'class': 'js-switch'}}) }} {{ workroom.vars.label }}</label>
                            </div>
                          {% endfor %}
                        </div>
                      </div>
                    </div>
                    <hr/>
                </div>
              </div>
              {% endif %}
              {% endif %}
              <div class="x_panel">
                <div class="x_content">
                  <div class="form-group">
                      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        {{ form_widget(form.save, { 'label': 'Submit', 'attr': {'class': 'btn btn-success'} }) }}
                        <!--<button class="btn btn-primary" type="button"></button>
                        <button type="submit" class="btn btn-success">{% trans %}Submit{% endtrans %}</button>-->
                      </div>
                    </div>
                </div>
              </div>
              {{ form_end(form) }}
            </div>

          </div>

        </div>
        <!-- /page content -->

        {{ include('bloc/bloc-footer.html.twig') }}
        
      </div>
    </div>

{% endblock %}

